@model Category

<form method="post">
    <input asp-for="Id" hidden />

    <!-- Bootstrap Card -->
    <div class="card shadow-sm border-light mt-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Delete Category</h2>
        </div>
        <div class="card-body">
            <!-- Category Name Input -->
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <!-- Display Order Input -->
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
            </div>

            <!-- Action Buttons -->
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
