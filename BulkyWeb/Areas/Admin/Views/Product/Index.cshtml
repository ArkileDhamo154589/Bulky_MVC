@model List<Product>

<div class="container mt-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product <i class="bi bi-patch-plus"></i>
            </a>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.ISBN</td>
                            <td>@obj.ListPrice</td>
                            <td>@obj.Author</td>
                            
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                                        <i class="bi bi-archive"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

