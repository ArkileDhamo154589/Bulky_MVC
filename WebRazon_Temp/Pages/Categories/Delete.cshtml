@page
@model WebRazon_Temp.Pages.Categories.DeleteModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">Delete Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Index" class="btn btn-secondary">
                Back to List <i class="bi bi-arrow-left-circle"></i>
            </a>
        </div>
    </div>

    <div class="border p-3 mt-4">
        <h3>Are you sure you want to delete the category <strong>@Model.Category.Name</strong>?</h3>
        <form method="post">
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/Categories/Index" class="btn btn-secondary form-control btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
