@page
@model WebRazon_Temp.Pages.Categories.EditModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Index" class="btn btn-secondary">
                Back to List <i class="bi bi-arrow-left-circle"></i>
            </a>
        </div>
    </div>

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h3>Edit Category</h3>
            </div>
            <div asp-validation-summary="All"></div>

            <!-- Hidden field for category ID -->
            <input asp-for="Category.Id" hidden />

            <!-- Category Name Field -->
            <div class="mb-3 row p-1">
                <label asp-for="Category.Name" class="p-0"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <!-- Display Order Field -->
            <div class="mb-3 row p-1">
                <label asp-for="Category.DisplayOrder" class="p-0"></label>
                <input asp-for="Category.DisplayOrder" class="form-control" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/Categories/Index" class="btn btn-secondary form-control btn-outline-secondary">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
